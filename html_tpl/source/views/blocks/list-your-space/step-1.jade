.step-1
    .details
        .detail.location.clearfix
            .detail-label
                label(for="address_1")
                    i.fa.fa-map-marker
                    | Location
            .detail-inputs
                .inputs.location.clearfix
                    .street.add-tick
                        input(type="text", placeholder="Street name…", required="required", name="address_1")
                        i.fa.fa-check
                    .town
                        .pop-to-front
                            input(type="text", placeholder="Town or City…", required="required", name="city")
                            i.fa.fa-check
                    .postcode
                        input(type="text", placeholder="Postcode…", required="required", name="postcode")
                        i.fa.fa-check
                    .submit-location
                        a(href="#", id="map-find") Find on map
                .space-map
                    .inner
                        #location_map(data-lat="-34.397", data-lng="150.644")
        // END : ITM
        .detail.description.clearfix
            .detail-label
                label(for="description")
                    i.fa.fa-pencil
                    | Description
            .detail-inputs
                textarea(placeholder="Please enter a description of your space, including its location, nearby landmarks or stations, and details about the type of space (driveway, underground parking, lock-up garage etc)", id="description" ,required="required", name="description", cols="50" rows="10" aria-required="true")
                i.fa.fa-check
        // END : ITM
        .detail.type-of-rental.clearfix
            .detail-label
                label(for="rentalType")
                    i.fa.fa-cogs
                    | Type of rental
            .detail-inputs
                .inputs
                    .input
                        label.fake-button.add-tick
                            input(data-no-style="data-no-style", data-rental-type="daily", name="rental_type[daily]", type="checkbox", value="daily_rental" ,aria-invalid="false")
                            .actual-label
                                i.fa.fa-calendar
                                | Daily
                                i.fa.fa-check
                    // END
                    .input
                        label.fake-button.add-tick
                            input(data-no-style="data-no-style", data-rental-type="monthly", name="rental_type[monthly]", type="checkbox", value="monthly_rental" ,aria-invalid="false")
                            .actual-label
                                i.fa.fa-calendar-o
                                | Monthly (long term)
                                i.fa.fa-check
                    // END
                    .input
                        .rental-tooltip
                            i(class="fa fa-info-circle", data-toggle="tooltip", data-placement="bottom", title="", data-original-title="A monthly rental is recommended in most instances, especially if a key fob is required to access your space, but if you’re located near a stadium, event or airport then we’d recommend opting for a daily rental. You can also opt for both.")
                    // END
        // END : ITM
