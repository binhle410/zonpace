{% extends 'AppBundle::layout.html.twig' %}
{% block content %}


    <section class="main-container" data-verify-phone-number="">

        <div class="general_container wrapper user_profile_wrapper">
            <div class="row">

                <div class="main col-md-8 col-lg-offset-1 col-md-push-4 col-lg-push-3">
                    <form role="form" method="post" enctype="multipart/form-data">
                        {{ form_row(form._token) }}
                        {% if user.photo %}
                            <div class="form-group">
                                <img src="{{ getUrl(user.photo,'default','medium') }}">
                            </div>
                        {% endif %}
                        <div class="form-group">
                            {{ form_widget(form.photo.binaryContent,{'attr':{'class':'','placeholder':''}}) }}
                        </div>

                        <div class="row">

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">First Name</label>
                                    {{ form_widget(form.firstName,{'attr':{'class':'form-control','placeholder':''}}) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">LastName</label>
                                    {{ form_widget(form.lastName,{'attr':{'class':'form-control','placeholder':''}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Gender</label>
                                    {{ form_widget(form.gender,{'attr':{'class':'form-control','placeholder':''}}) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Birthday</label>
                                    {{ form_widget(form.birthday,{'attr':{'class':'form-control datepicker','placeholder':''}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">State</label>
                                    {{ form_widget(form.state,{'attr':{'class':'form-control','placeholder':''}}) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">City</label>
                                    {{ form_widget(form.city,{'attr':{'class':'form-control','placeholder':''}}) }}
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Email Address</label>
                            {{ form_widget(form.email,{'attr':{'class':'form-control','placeholder':'','readonly':true}}) }}
                        </div>
                        <div class="row">

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Phone Number</label>
                                    {{ form_widget(form.phone,{'attr':{'class':'form-control phone-need-verify','placeholder':''}}) }}
                                </div>
                            </div>
                            <div class="col-md-6" style="line-height: 87px;">
                                {% if app.user.isVerifiedPhone == false %}
                                    <a href="javascript:void(0)" style="    margin-top: 35px;
    color: red;
    text-decoration: underline;" data-toggle="modal" data-target=".bs-modal-sm-verify-phone"
                                       class="verify-phone-number" data-url="{{ path('app_user_user_control_send_verified_code') }}"> Confirm your phone number</a>
                                {% else %}
                                    <span style="margin-top: 35px;color: red;text-decoration: underline"
                                       class=""> Verified.</span>
                                {% endif %}
                            </div>

                        </div>

                        <div class="form-group">
                            <label class="control-label">Describe Yourself</label>
                            {{ form_widget(form.aboutUser,{'attr':{'class':'form-control','placeholder':''}}) }}
                        </div>
                        <button type="submit" class="btn btn-default">Update your profile</button>
                    </form>
                </div>
                {% include 'AppBundle:User/UserControl:_verify_phone_form.html.twig' %}

                <!-- sidebar start -->
                {% include 'AppBundle:User:_nav.html.twig' %}
                <!-- ================ -->


            </div>
        </div>
    </section>

{% endblock %}