{% extends 'AppBundle::layout.html.twig' %}
{% block content %}


    <section class="main-container" data-verify-phone-number="">

        <div class="general_container wrapper">
            <div class="row">

                <div class="main col-md-8 col-lg-offset-1 col-md-push-4 col-lg-push-3">
                    <form role="form" method="post" name="form-setting-1">
                        {{ form_row(form1._token) }}

                        <div class="row">
                            <div class="col-md-5">
                                <h3>Text message settings</h3>
                                <p>Receive mobile updates by text messages via</p>
                                {{ form_widget(form1.phone,{'attr':{'class':'form-control phone-need-verify','placeholder':''}}) }}

                                {% if app.user.isVerifiedPhone == false %}
                                    <a href="javascript:void(0)" style="    margin-top: 35px;
    color: red;
    text-decoration: underline;" data-toggle="modal" data-target=".bs-modal-sm-verify-phone"
                                       class="verify-phone-number" data-url="{{ path('app_user_user_control_send_verified_code') }}"> Confirm your phone number</a>
                                {% else %}
                                    <span style="margin-top: 35px;color: red;text-decoration: underline"
                                          class=""> Verified.</span>
                                {% endif %}
                            </div>
                            <div class="col-md-7" style="margin-top: 50px;">
                                <div class="checkbox">
                                    <label>
                                        {{ form_widget(form1.phoneSetting1) }}
                                        Message from hosts and guest
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        {{ form_widget(form1.phoneSetting2) }}
                                        Reservation update: requests, confirmation, changes and more
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        {{ form_widget(form1.phoneSetting3) }}
                                        Account activity: changes made to account
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        {{ form_widget(form1.phoneSetting4) }}
                                        Reservation and review reminder
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        {{ form_widget(form1.phoneSetting5) }}
                                        Other: features update and more
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="margin-top: 50px;">
                            <div class="col-md-5">
                                <h3>Email Setting</h3>
                                <p>I want to receive:</p>
                                <p>You can dissable these anytime</p>
                            </div>
                            <div class="col-md-7" style="margin-top: 50px;">
                                <div class="checkbox">
                                    <label>
                                        {{ form_widget(form1.emailSetting1) }}
                                        Email from hosts and guests
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        {{ form_widget(form1.emailSetting2) }}
                                        Reservation update: requests, confirmation, changes and more
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        {{ form_widget(form1.emailSetting3) }}
                                        General promotions, updates, news about Zonpage or general promotions for
                                        partner campaign and services ,user survey ,inspiration and love from Zonpage
                                    </label>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        {{ form_widget(form1.emailSetting4) }}
                                        Reservation and review reminder
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="margin-top: 50px;">
                            <div class="col-md-12">
                                <div class="checkbox">
                                    <label>
                                        {{ form_widget(form1.loginNotification) }}
                                        Login notifications
                                    </label>
                                </div>
                                <p>General promotions, updates, news about Zonpage or general promotions for partner
                                    campaign and services ,user survey ,inspiration and love from Zonpage</p>
                            </div>

                        </div>
                        <button type="submit" class="btn btn-default">Update settings</button>
                    </form>
                    <form role="form" method="post" name="form-setting-2">
                        <h3>Change your password</h3>
                        {{ form_row(form2._token) }}
                        <div class="form-group">
                            <label for="exampleInputEmail1">Current Password</label>
                            {{ form_widget(form2.currentPassword,{'attr':{'class':'form-control'}}) }}
                        </div>
                        <div class="row">

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">New Password</label>
                                    {{ form_widget(form2.password.first,{'attr':{'class':'form-control','placeholder':'New password'}}) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">New Password</label>
                                    {{ form_widget(form2.password.second,{'attr':{'class':'form-control','placeholder':'Retype new password'}}) }}
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-default">Update password</button>
                    </form>
                </div>
                {% include 'AppBundle:User/UserControl:_verify_phone_form.html.twig' %}

                <!-- sidebar start -->
                {% include 'AppBundle:User:_nav.html.twig' %}
                <!-- ================ -->


            </div>
        </div>
    </section>

{% endblock %}