{% extends 'AppBundle::layout.html.twig' %}
{% form_theme form 'AppBundle:form:space_fields_step1.html.twig' %}
{% block content %}

        <section class="blk-lease-space blk-white" data-space-create-step1="">
            <div class="container">
                <h2 class="blk-ttl">Lease Your Space</h2>
                {% include 'AppBundle:User/Space/Steps:_nav.html.twig' %}
                <!-- END : LEASE NAV-->
                <section class="blk-lease-map">
                    <h2 class="blk-ttl-bold">Location</h2>
                    <div class="row">
                        <section class="col-xs-6">
                            <form name="frm-location" class="frm-location" method="post">
                                {{ form_row(form._token) }}
                                {{ form_widget(form.location) }}
                                {{ form_widget(form.shape) }}
                                <!-- END : ITM-->
                                <div class="frow">Please draw using clicks on the map to the right to indicate the area of your space.</div>
                                <!-- END : ITM-->
                                <div class="frow">
                                    <input type="submit" value="Next" class="btn btn-red">
                                </div>
                                <!-- END : ITM-->
                            </form>
                        </section>
                        <!-- END : COL-->
                        <section class="col-xs-6">
                            <div id="location-map"></div>
                            <div style="text-align:center">
                                <input id="clear_shapes" class="btn btn-red" value="clear" type="button"/>
                                <input id="save" class="btn btn-red" value="Save" type="button"/>
                            </div>
                        </section>
                        <!-- END : COL-->
                    </div>
                </section>
                <!-- END -->
            </div>
        </section>
        <!-- END : LOCATION-->


{% endblock %}