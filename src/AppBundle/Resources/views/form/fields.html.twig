{% block app_space_location_widget %}
    {% spaceless %}
        <div class="form-group">
            <label class="control-label">Street Address</label>
            {{ form_widget(form.streetAddress,{'attr':{'class':'form-control','placeholder':'Street Address'}}) }}
        </div>
        <div class="form-group">
            <label class="control-label">Type of Space(Optional)</label>
            {{ form_widget(form.typeSpaceOptional,{'attr':{'class':'form-control','placeholder':'Example: Apt, Suite, Bldg, etc'}}) }}
        </div>

        <div class="form-group">
            <label class="control-label">City</label>
            {{ form_widget(form.city,{'attr':{'class':'form-control','placeholder':'City'}}) }}
        </div>

        <div class="row">

            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">State</label>
                    {{ form_widget(form.state,{'attr':{'class':'form-control','placeholder':'State'}}) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">Zip Code</label>
                    {{ form_widget(form.zipCode,{'attr':{'class':'form-control','placeholder':'Zip Code'}}) }}
                </div>
            </div>
        </div>

            {{ form_widget(form.typeSpace,{'attr':{'class':'form-control'}}) }}


        <div class="form-group">
            <label class="control-label">Square Feet</label>
            {{ form_widget(form.squareFeet,{'attr':{'class':'form-control','placeholder':'Square Feet'}}) }}
        </div>
    {% endspaceless %}
{% endblock %}
{% block choice_widget_expanded %}
    {% spaceless %}
        <div class="form-group">
            <label class="control-label">Type of Space</label>
            <div class="row radio">
                {% for child in form %}
                    <div class="col-md-4">
                        <label>
                            {{form_widget(child)}}
                            {{form_label(child)}}
                        </label>
                    </div>
                {% endfor %}
            </div>
        </div>

    {% endspaceless %}
{% endblock %}

{% block app_space_price_widget %}
    {% spaceless %}
        <div class="form-group">
            <label for="exampleInputFile">Price</label>
            <div class="row checkbox">
                <div class="col-md-3">
                    <label>
                        <input type="checkbox" value="">
                        Daily
                    </label>
                </div>
                <div class="col-md-6">
                    {{ form_widget(form.daily,{'attr':{'class':'form-control','placeholder':'Price / Day'}}) }}
                </div>
            </div>
            <div class="row checkbox">
                <div class="col-md-3">
                    <label>
                        <input type="checkbox" value="">
                        Weekly Discount
                    </label>
                </div>
                <div class="col-md-6">
                    {{ form_widget(form.weeklyDiscount,{'attr':{'class':'form-control','placeholder':'% Discount'}}) }}
                </div>
            </div>
            <div class="row checkbox">
                <div class="col-md-3">
                    <label>
                        <input type="checkbox" value="">
                        Monthly Discount
                    </label>
                </div>
                <div class="col-md-6">
                    {{ form_widget(form.monthlyDiscount,{'attr':{'class':'form-control','placeholder':'% Discount'}}) }}
                </div>
            </div>

        </div>

    {% endspaceless %}
{% endblock %}