{% extends 'AppBundle::layout.html.twig' %}
{% block content %}


    <section class="main-container">

        <div class="container">
            <div class="row">

                <!-- main start -->
                <!-- ================ -->
                <div class="main col-md-8 col-lg-offset-1 col-md-push-4 col-lg-push-3">

                    <hr class="divider">
                    <!-- Tab panes -->
                    <div class="tab-content clear-style">
                        <div class="tab-pane active" id="pill-1">
                            <div class="listing-item mb-20">
                                <div class="row grid-space-0">
                                    <div class="col-sm-6 col-md-2">
                                        <div class="overlay-container">
                                            {{ getImageSpace(space,150,150) }}
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-7" style="margin-top: -25px;">
                                        <div class="body">
                                            <h3 class="margin-clear"><a
                                                        href="shop-product.html">{{ space.name }}</a></h3>
                                            <div class="row">
                                                <div class="col-md-8">
                                                        <span style="font-size: 12px">{{ space.location.squareFeet }}
                                                            sqft</span>
                                                    <span style="font-size: 12px">{{ getTypeSpace(space.location.typeSpace) }}</span>
                                                </div>
                                            </div>
                                            <p>
                                                {{ getRatingSpace(space,1) }}
                                            </p>

                                        </div>


                                    </div>

                                </div>
                                {% for booking in space.bookings %}
                                    {% if booking.isReview == true %}
                                        <hr class="divider">
                                        <div class="row">
                                            <div class="col-md-offset-2 col-md-10">
                                                <div class="row">
                                                    <div class="col-md-8">
                                                        <Strong>Review
                                                            from {{ booking.user.firstName~' '~booking.user.lastName }}</Strong>
                                                    </div>
                                                    <div class="col-md-4" style="margin-top: -20px;">
                                                        <button class="btn btn-default pull-right"  data-toggle="modal" data-target="#reply">Reply</button>
                                                        {% include 'AppBundle:User/HostControl:_reviewed-space-reply.html.twig' %}
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        Location: {{ getRatingSpace(booking,2) }}
                                                    </div>
                                                    <div class="col-md-6">
                                                        Communication: {{ getRatingSpace(booking,3) }}
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        Short paragraph on user's opinion about the space
                                                    </div>
                                                </div>
                                                {% for bookingReviewMessage in booking.bookingReviewMessages %}
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        -{{ bookingReviewMessage.message|raw }}
                                                    </div>
                                                </div>
                                                    {% endfor %}
                                            </div>
                                        </div>
                                    {% endif %}
                                {% endfor %}

                            </div>
                        </div>
                    </div>
                </div>

                <!-- sidebar start -->
                {% include 'AppBundle:User:_nav.html.twig' %}
                <!-- ================ -->


            </div>
        </div>
    </section>

{% endblock %}