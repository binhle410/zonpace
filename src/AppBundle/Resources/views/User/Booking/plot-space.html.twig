<div data-plot-space="" class="modal fade" id="plot-space" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">


    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span
                            aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="myModalLabel">Reply Message</h4>
            </div>
            <div class="modal-body">
                <div class="row width-map">

                    <div class="map_plot" id="map_in_plot" data-lat="{{ getLatLngSpace(space,'lat') }}"
                         data-lng="{{ getLatLngSpace(space,'lng') }}"></div>
                    <div style="text-align:center">
                        <input id="clear_shapes" class="btn btn-default" value="clear" type="button"/>
                        <input id="save" class="btn btn-primary" value="Save" type="button"/>
                    </div>
                </div>
                {% set bookingId = booking.id is not null ? booking.id : 0  %}
                <form action="{{ path('app_user_booking_plot_space',{'space':space.id,'booking':booking.id,'type':type}) }}" method="post">
                    {{ form_row(form._token) }}
                    {{ form_widget(form.spaceShape,{'attr':{'class':'form-control','placeholder':''}}) }}
                    {{ form_widget(form.spaceSquareFeet,{'attr':{'class':'form-control','placeholder':'Square Feet'}}) }}
                    {{ form_widget(form.spacePriceDaily,{'attr':{'class':'form-control','placeholder':'Price Daily'}}) }}
                    {{ form_widget(form.spaceWeeklyDiscount,{'attr':{'class':'form-control','placeholder':'Discount Weekly'}}) }}
                    {{ form_widget(form.spaceMonthlyDiscount,{'attr':{'class':'form-control','placeholder':'Discount Monthly'}}) }}
                    {#{{ form_widget(form.message,{'attr':{'class':'form-control','rows':'3'}}) }}#}
                    <button type="submit" class="btn btn-sm btn-default">Send</button>
                </form>
            </div>
        </div>
    </div>
</div>