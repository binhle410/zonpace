<h3 class="margin-clear"><a
            href="shop-product.html">{{ space.name }}</a></h3>
<div class="row">
    <div class="col-md-8">
        <span style="font-size: 12px">{{ space.location.squareFeet }} sqft</span>
        <span style="font-size: 12px">{{ getTypeSpace(space.location.typeSpace) }}</span>
    </div>
</div>
<p>
    {{ getRatingSpace(space,1) }}
</p>
<div class="row">
    <div class="col-md-4">
        <strong>${{ space.price.daily }}</strong><br>Per Day
    </div>
    <div class="col-md-4">
        <strong>${{ (space.price.daily*7)-((space.price.daily*7*space.price.weeklyDiscount)/100) }}</strong><br>Per
        Day
    </div>
    <div class="col-md-4">
        <strong>${{ (space.price.daily*30)-((space.price.daily*30*space.price.monthlyDiscount)/100) }}</strong><br>Per
        Day
    </div>
</div>
<hr class="divider">
Payment
<span class="payment-errors"></span>
<form id="payment-form" action="{{ path('app_user_booking_create',{'step':3,'space':space.id,'booking':booking.id}) }}" method="post" data-publishable-key="{{ publishableKey }}">
    <div class="form-row">
        <label>Card Number</label>
        <input type="text" size="20" autocomplete="off" class="card-number" />
    </div>
    <div class="form-row">
        <label>Card Holder</label>
        <input type="text" size="20" autocomplete="off" class="card-name-holder" />
    </div>
    <div class="form-row">
        <label>CVC</label>
        <input type="text" size="4" autocomplete="off" class="card-cvc" />
    </div>
    <div class="form-row">
        <label>Expiration (MM/YYYY)</label>
        <input type="text" size="2" class="card-expiry-month"/>
        <span> / </span>
        <input type="text" size="4" class="card-expiry-year"/>
    </div>
    <button type="submit" class="submit-button">Next</button>
    <button onclick="window.location.href='{{ path('app_user_booking_create',{'step':1,'space':space.id,'booking':booking.id}) }}'" type="button" class="">Back to choice of land</button>
</form>
</form>