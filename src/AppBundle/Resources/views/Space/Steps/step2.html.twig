{% extends 'AppBundle::layout.html.twig' %}
{% form_theme form 'AppBundle:form:fields.html.twig' %}
{% block content %}
    <div class="breadcrumb-container">
        <div class="container">
            <ol class="breadcrumb">
                <li><i class="fa fa-home pr-10"></i><a href="index.html">Home</a></li>
                <li class="active">Forms</li>
            </ol>
        </div>
    </div>

    <section class="main-container">

        <div class="container">
            <div class="row">
                <div class="main col-md-6">
                    <ul class="nav nav-pills" role="tablist">
                        <li class=""><a href="#pill-pr-1" role="tab" data-toggle="tab" title="Step 1" aria-expanded="false"><i class="fa fa-dot-circle-o pr-5"></i>Location</a></li>
                        <li class="active"><a href="#pill-pr-2" role="tab" data-toggle="tab" title="Step 2" aria-expanded="false"><i class="fa fa-dot-circle-o pr-5"></i><strong>Space Detail</strong></a></li>
                        <li class=""><a href="#pill-pr-3" role="tab" data-toggle="tab" title="Step 3" aria-expanded="true"><i class="fa fa-dot-circle-o pr-5"></i> Review Your Space</a></li>
                        <li class=""><a href="#pill-pr-3" role="tab" data-toggle="tab" title="Step 3" aria-expanded="true"><i class="fa fa-dot-circle-o pr-5"></i> Activate</a></li>
                    </ul>
                    <h3>Space Detail</h3>
                    <form role="form" method="post">
                        {{ form_row(form._token) }}
                        <div class="form-group">
                            <label class="control-label">Name of Space</label>
                            {{ form_widget(form.name,{'attr':{'class':'form-control','placeholder':'Name of Space'}}) }}
                        </div>
                        <div class="form-group">
                            <label class="control-label" for="inputSuccess1">Desription</label>
                            {{ form_widget(form.description,{'attr':{'class':'form-control','placeholder':'Example: Apt, Suite, Bldg, etc'}}) }}
                        </div>

                        <div class="form-group">
                            <label for="exampleInputFile">File input</label>
                            <input type="file" id="exampleInputFile">
                        </div>

                        <hr class="divider">
                        {{ form_widget(form.price) }}
                        <hr class="divider">
                        <div class="form-group">
                            <label for="exampleInputFile">Feature</label>

                            <div class="form-group">
                                <label for="exampleInputFile">Cate</label>
                                <div class="row checkbox">
                                    <div class="col-md-4">
                                        <label>
                                            <input type="checkbox" value="">
                                            aaaaa
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="divider">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label" for="inputError1">Available from</label>
                                    <input type="text" class="form-control" id="inputWarning2">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label" for="inputWarning2">Available to</label>
                                    <input type="text" class="form-control" id="inputWarning2">
                                </div>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-md-6">
                                <button type="submit" class="btn btn-default">Next</button>
                            </div>
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-default pull-right">Back</button>
                            </div>
                        </div>


                    </form>

                </div>

            </div>
        </div>
    </section>

{% endblock %}